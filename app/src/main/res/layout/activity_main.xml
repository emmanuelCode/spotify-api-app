<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please login!"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>



    <Button
        android:id="@+id/login_button"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_text"
        android:text="Login" />

    <Button
        android:id="@+id/response_button"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:layout_centerHorizontal="true"
        android:text="JSON response" />


    <Button
        android:id="@+id/play_list_button"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/response_button"
        android:layout_centerHorizontal="true"
        android:text="my playlist" />




  <ScrollView
      android:id="@+id/JSON_scrollview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/play_list_button">
    <TextView
        android:id="@+id/JSON_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/play_list_button"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

</ScrollView>




    </RelativeLayout>
